#include <iostream>
#include <string>
#include <fstream>

int found_in_dic(){
    std::ifstream dictionnary;
    std::string line;
    std::string pass("PASSWORD");
    dictionnary.open("key.txt");
    size_t found;
    size_t pos;
    int cpt(0);
    if(dictionnary.is_open()){
        while( getline(dictionnary,line) )
        {
            //cout << "Searching for "<<line <<" in " << pass <<endl;
            found = pass.find(line);
            if(found==0 && cpt !=4747){
                pos=cpt;
                std::cout<< "Found at " << pos << std::endl;
            }
            cpt++;
            //getchar();
        }
        dictionnary.close();
    }}
